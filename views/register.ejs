<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1547891654-e66ed7ebb968?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-center flex items-center justify-center">
    <div class="w-[25vw]  bg-zinc-100 px-5 py-9 rounded-[20px]">
      <h1 class="text-3xl mb-8 text-transform: capitalize font-semibold text-center text-zinc-700 leading-none tracking-tight">Create New Account</h1>
      <form action="/register" method="post">
        <input class="border-2 block w-full px-3 py-2 mt-2 rounded-md" type="text" name="username" placeholder="username">
        <input class="border-2 block w-full px-3 py-2 mt-2 rounded-md" type="email" name="email" placeholder="email">
        <input class="border-2 block w-full px-3 py-2 mt-2 rounded-md" type="number" name="contact" placeholder="contact">
        <input class="border-2 block w-full px-3 py-2 mt-2 rounded-md" type="password" name="password" placeholder="password">
        
        <input class="border-2 block w-full px-3 py-2 mt-5 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-500 mt-6 text-center w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; </p>
      </form>
      <a class="inline-block mt-5 text-sm font-semibold text-zinc-700 text-center w-full"   href="/">Login Existing Account</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>